<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#542ACC"
            android:padding="24dp">

            <TextView
                android:id="@+id/addList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Name Of List :"
                android:textColor="#FFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText_listName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addList"
                android:layout_centerHorizontal="true"
                android:background="#6C49D1"
                android:hint="Name Of List "
                android:padding="18dp"
                android:textColor="#FFFF"
                android:textColorHint="#80FFFFFF"/>

            <Button
                android:id="@+id/saveList"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_listName"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:text="ok"
                android:textColor="#FFFF"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>